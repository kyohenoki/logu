{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2022"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*", "*.config.*"],
	"exclude": ["node_modules", "dist"]
}
